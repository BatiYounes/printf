#include "main.h"
#include <stdarg.h>

int _printif(const char *format, ...) {
    va_list args;
    va_start(args, format);
    int printed_chars = 0, n = 0, sign = 1;

    while (*format) {
        if (*format == '%') {
            format++;
            if (*format == 'd' || *format == 'i') {
                n = va_arg(args, int);
                if (n < 0) {
                    _putchar('-');
                    printed_chars++;
                    n = -n;
                }
                printed_chars += print_number(n);
            } else {
                _putchar('%');
                printed_chars++;
            }
        } else {
            _putchar(*format);
            printed_chars++;
        }
        format++;
    }

    va_end(args);
    return (printed_chars);
}

int print_number(int n) {
    int digits = 0;
    if (n == 0) {
        _putchar('0');
        return 1;
    }
    if (n < 0) {
        n = -n;
    }
    while (n > 0) {
        _putchar(n % 10 + '0');
        n /= 10;
        digits++;
    }
    return digits;
}
